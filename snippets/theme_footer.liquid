<section class="footer-logo-block">
  <div class="footer-logo-wrapper">
  	<div class="container">
      <div class="row">
        <div class="col-sm-12">
          <div class="footer-logo-content">
            <!-- <h1><a href="/"><img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" /></a></h1> ja remove-->
          </div>
        	<div class="fi-follow-content">
            	<ul class="credit-cards clearfix">
                    {% if settings.accept_shopify %}<li><img src="{{ 'icon-shopifypayments.png' | asset_url }}" alt="Shopify Payments" /></li>{% endif %}  
