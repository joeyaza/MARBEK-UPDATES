  <div class="clearfix">
    <h3>{{ 'blogs.sidebar.tags' | t }}</h3>
    <ul class="tags">
      <li{% unless current_tags %} class="active"{% endunless %}><a href="{{ shop.url}}/blogs/{{ blog.handle }}">{{ 'blogs.sidebar.all' | t }}</a></li>
      {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li class="active">{{ tag | link_to_remove_tag: tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
      {% endfor %}
    </ul>

  </div>
-->
  {% endif %}

  {% if settings.side_banner_show %}
  <div class="sb-content">
    <div class="sidebar_banner1 clearfix">
      <img src='{{ 'blog_sidebar.jpg' | asset_url}}' alt="sidebar banner" />
    </div>
  </div>
  <div class="sb-content">
    <div class="sidebar_banner2 clearfix">
      <img src='{{ 'blog_sidebar2.jpg' | asset_url}}' alt="sidebar banner" />
    </div>
  </div>
  {% endif %}
</div>
