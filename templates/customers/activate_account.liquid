<section class="account-heading">
  <div class="account-heading-wrapper">
    <div class="container">
      <div class="row">
        <div class="account-heading-inner">
          <h1 class="page-title">{{ 'customer.activate_account.title' | t }}</h1>
          <div class="breadcrumb clearfix">
            <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb"><a href="{{ shop.url }}" title="{{ shop.name | escape }}" itemprop="url"><span itemprop="title">{{ 'general.breadcrumbs.home' | t }}</span></a></span>
            <span class="arrow-space">&#62;</span>
            <span itemscope itemtype="http://data-vocabulary.org/Breadcrumb">
              <a href="{{ page.url }}" title="{{ 'customer.activate_account.title' | t }}">{{ 'customer.activate_account.title' | t }}</a>
            </span>              
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="account-content">
  <div class="account-content-wrapper">
    <div class="container">
      <div class="row">
        <div class="account-content-inner">
  		  <div id="customer-activate">    
            <p class="note create-password">{{ 'customer.activate_account.subtext' | t }}</p>

            {% form 'activate_customer_password' %}
            {{ form.errors | default_errors }}

            <label class="label" for="password">{{ 'customer.activate_account.password' | t }}</label>
            <input type="password" value="" name="customer[password]" id="customer_password" class="text" size="16" />

            <label class="label" for="password_confirmation">{{ 'customer.activate_account.password_confirm' | t }}</label>
            <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="text" size="16" />

            <div class="action_bottom">
              <input class="btn" type="submit" value="{{ 'customer.activate_account.submit' | t }}" />
              <a href="/">{{ 'customer.activate_account.cancel' | t }}</a>
            </div>
            {% endform %}
		  </div>
        </div>
      </div>
    </div>
  </div>
</section>
